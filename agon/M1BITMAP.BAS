10 T = TIME
20 MODE 1: CLS
30 FOR I% = 0 TO 15
40   G% = (I% AND 12) / 4
50   G% = G% * 85
60   B% = I% AND 3
70   B% = B% * 85
80   COLOUR I%,0,G%,B%
100  VDU 23,27,0,I%
110  VDU 23,27,1,1;1;0,G%,B%,255
120 NEXT I%
130  FOR PY%=0 TO 383
140    YZ = PY%*2.625/384-1.3125
150    FOR PX%=0 TO 511
160      XZ = PX%*3.5/512-2.5
170      X = 0: Y = 0
180      FOR I%=0 TO 15
190        IF X*X+Y*Y > 4 THEN GOTO 240
200       XT=X*X-Y*Y+XZ
210       Y=2*X*Y+YZ
220       X=XT
230     NEXT I%
240     VDU 23,27,0,I%
250     VDU 23,27,3,PX%;PY%;
260   NEXT PX%
270 NEXT PY%
280 COLOUR 15,255,255,255
300 COLOUR 15
310 PRINT ((TIME-T)/100); " SECONDS"
